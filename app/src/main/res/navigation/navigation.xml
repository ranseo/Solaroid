<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/fragment_solaroid_frame">

    <fragment
        android:id="@+id/fragment_solaroid_gallery"
        android:name="com.example.solaroid.solaroidgallery.SolaroidGalleryFragment"
        android:label="SolaroidGalleryFragment"
        tools:layout="@layout/fragment_solaroid_gallery">

        <action
            android:id="@+id/action_galleryFragment_to_detailFragment"
            app:destination="@+id/fragment_solaroid_detail"/>

        <argument
            android:name="ShowAppBar"
            android:defaultValue="true"/>

    </fragment>

    <fragment
        android:id="@+id/fragment_solaroid_create"
        android:name="com.example.solaroid.solaroidcreate.SolaroidPhotoCreateFragment"
        android:label="SolaroidPhotoCreateFragment"
        tools:layout="@layout/fragment_solaroid_photo_create">

        <action
            android:id="@+id/action_createFragment_to_galleryFragment"
            app:destination="@+id/fragment_solaroid_gallery"
            app:popUpTo="@+id/fragment_solaroid_gallery"
            app:popUpToInclusive="true"/>


    </fragment>

    <fragment
        android:id="@+id/fragment_solaroid_detail"
        android:name="com.example.solaroid.solaroiddetail.SolaroidDetailFragment"
        android:label="SolaroidPhotoDetailFragment"
        tools:layout="@layout/fragment_solaroid_detail">
        <argument
            android:name="photo_tickey_key"
            app:argType="long"/>
        
    </fragment>

    <fragment
        android:id="@+id/fragment_solaroid_frame"
        android:name="com.example.solaroid.solaroidframe.SolaroidFrameFragment"
        android:label="SolaroidFrameFragment"
        tools:layout="@layout/fragment_solaroid_frame">


        <action
            android:id="@+id/action_frameFragment_to_detailFragment"
            app:destination="@+id/fragment_solaroid_detail" />

        <action
            android:id="@+id/action_frameFragment_to_frameFavoriteFragment"
            app:destination="@+id/fragment_solaroid_frame_favorite"
            app:popUpTo="@+id/fragment_solaroid_frame"
            app:popUpToInclusive="true"/>

        <argument
            android:name="ShowAppBar"
            android:defaultValue="true"/>

<!--        <action-->
<!--            android:id="@+id/action_frameFragment_restart"-->
<!--            app:destination="@id/fragment_solaroid_frame"-->
<!--            app:popUpTo="@+id/fragment_solaroid_frame"-->
<!--            app:popUpToInclusive="false"/>-->

    </fragment>

    <fragment
        android:id="@+id/fragment_solaroid_frame_favorite"
        android:name="com.example.solaroid.solaroidframe.SolaroidFrameFavoriteFragment"
        android:label="SolaroidFrameFavoriteFragment"
        tools:layout="@layout/fragment_solaroid_frame">

        <action
            android:id="@+id/action_frameFavoriteFragment_to_frameFragment"
            app:destination="@+id/fragment_solaroid_frame"
            app:popUpTo="@+id/fragment_solaroid_frame_favorite"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_frameFavoriteFragment_to_detailFragment"
            app:destination="@+id/fragment_solaroid_detail"
            />


        <argument
            android:name="ShowAppBar"
            android:defaultValue="true"/>
    </fragment>



</navigation>