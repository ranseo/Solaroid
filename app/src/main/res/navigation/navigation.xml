<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@+id/fragment_solaroid_gallery">


    <action
        android:id="@+id/global_action_homeActivity_to_loginActivity"
        app:destination="@+id/login_activity"
        app:popUpTo="@+id/login_activity"
        app:popUpToInclusive="true"/>

    <action
        android:id="@+id/global_action_homeActivity_to_friendActivity"
        app:destination="@+id/friend_activity"
        app:popUpTo="@+id/friend_activity"
        app:popUpToInclusive="true"/>


    <activity
        android:id="@+id/login_activity"
        android:name="com.example.solaroid.login.LoginActivity"
        tools:layout="@layout/activity_login"
        android:label="로그인 활동"/>
    <activity
        android:id="@+id/friend_activity"
        android:name="com.example.solaroid.friend.activity.FriendActivity"
        tools:layout="@layout/activity_friend"
        android:label=""/>



    <fragment
        android:id="@+id/fragment_solaroid_gallery"
        android:name="com.example.solaroid.home.fragment.gallery.SolaroidGalleryFragment"
        android:label="갤러리"
        tools:layout="@layout/fragment_solaroid_gallery">


        <action
            android:id="@+id/action_gallery_to_frame"
            app:destination="@+id/fragment_solaroid_frame" />

        <action
            android:id="@+id/action_gallery_to_add"
            app:destination="@+id/fragment_solaroid_add"
            app:popUpTo="@+id/fragment_solaroid_add"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_gallery_to_create"
            app:destination="@+id/fragment_solaroid_create"
            app:popUpTo="@+id/fragment_solaroid_create"
            app:popUpToInclusive="true"
            />

        <argument
            android:name="ShowAppBar"
            android:defaultValue="true"/>

    </fragment>

    <fragment
        android:id="@+id/fragment_solaroid_create"
        android:name="com.example.solaroid.home.fragment.create.SolaroidPhotoCreateFragment"
        android:label="카메라 촬영"
        tools:layout="@layout/fragment_solaroid_photo_create">

        <action
            android:id="@+id/action_create_to_gallery"
            app:destination="@+id/fragment_solaroid_gallery"
            app:popUpTo="@+id/fragment_solaroid_gallery"
            app:popUpToInclusive="true"/>
    </fragment>



    <fragment
        android:id="@+id/fragment_solaroid_frame"
        android:name="com.example.solaroid.home.fragment.frame.SolaroidFrameFragment"
        android:label=""
        tools:layout="@layout/fragment_solaroid_frame">

        <action
            android:id="@+id/action_frame_to_create"
            app:destination="@+id/fragment_solaroid_create"
            app:popUpTo="@+id/fragment_solaroid_create"
            app:popUpToInclusive="true"
            />

        <action
            android:id="@+id/action_frame_to_edit"
            app:destination="@+id/fragment_solaroid_edit"
            app:popUpTo="@+id/fragment_solaroid_edit"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_frame_to_add"
            app:destination="@+id/fragment_solaroid_add"
            app:popUpTo="@+id/fragment_solaroid_add"
            app:popUpToInclusive="true"/>

        <argument
            android:name="ShowAppBar"
            android:defaultValue="true"/>

        <argument
            android:name="key"
            app:argType="string[]"/>

    </fragment>
    <fragment
        android:id="@+id/fragment_solaroid_edit"
        android:name="com.example.solaroid.home.fragment.edit.SolaroidEditFragment"
        android:label="수정"
        tools:layout="@layout/fragment_solaroid_edit">

        <action
            android:id="@+id/action_editFragment_to_frameFragmentContainer"
            app:destination="@id/fragment_solaroid_frame_container"
            app:popUpTo="@+id/fragment_solaroid_frame_container"
            app:popUpToInclusive="true" />

        <argument
            android:name="photo_ticket_key"
            app:argType="string"/>
    </fragment>


    <fragment
        android:id="@+id/fragment_solaroid_add"
        android:name="com.example.solaroid.home.fragment.add.SolaroidAddFragment"
        android:label=""
        tools:layout="@layout/fragment_solaroid_add">

        <action
            android:id="@+id/action_add_to_frame"
            app:destination="@+id/fragment_solaroid_frame"
            app:popUpTo="@+id/fragment_solaroid_frame"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_add_to_gallery"
            app:destination="@+id/fragment_solaroid_gallery"
            app:popUpTo="@+id/fragment_solaroid_gallery"
            app:popUpToInclusive="true"/>
    </fragment>


</navigation>