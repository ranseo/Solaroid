<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.solaroid.solaroidgallery.SolaroidGalleryViewModel" />

    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".solaroidgallery.SolaroidGalleryFragment">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/gallery_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/primaryDarkColor"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:layout_constraintTop_toTopOf="parent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            <!-- TODO: Update blank fragment layout -->
            <!--        <Button-->
            <!--            android:id="@+id/create_photoTicket_btn"-->
            <!--            android:onClick="@{()->viewModel.onClick()}"-->
            <!--            android:layout_width="240dp"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_marginTop="16dp"-->
            <!--            app:layout_constraintTop_toTopOf="parent"-->
            <!--            app:layout_constraintLeft_toLeftOf="parent"-->
            <!--            app:layout_constraintRight_toRightOf="parent"-->
            <!--            android:text="포토 티켓\n생성"-->
            <!--            android:backgroundTint="@color/pink"-->
            <!--            />-->

            <ImageButton
                android:id="@+id/popup_menu_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginTop="88dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="@color/image_btn_background"
                android:minHeight="48dp"
                android:src="@drawable/ic_filter" />

            <ImageButton
                android:id="@+id/convert_to_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginTop="88dp"
                android:layout_marginEnd="88dp"
                android:backgroundTint="@color/image_btn_background"
                android:minHeight="48dp"
                android:src="@drawable/baseline_crop_portrait_24"
                android:onClick="@{()->viewModel.navigateToFrame()}"
                tools:layout_editor_absoluteX="269dp"
                tools:layout_editor_absoluteY="56dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/photoTicket_rec"
                submitList="@{viewModel.photoTickets}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="120dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3"
                tools:itemCount="16"
                tools:listitem="@layout/list_item_solaroid_photo" />

        </FrameLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/activity_main_app_bar_menu"/>

    </androidx.drawerlayout.widget.DrawerLayout>


</layout>