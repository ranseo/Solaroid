<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.solaroid.solaroidframe.SolaroidFrameViewModel" />

    </data>


      <androidx.coordinatorlayout.widget.CoordinatorLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <androidx.fragment.app.FragmentContainerView
              android:id="@+id/fragment_frame_container_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              tools:layout="@layout/fragment_solaroid_frame_filter"/>


          <ImageButton
              android:id="@+id/popup_menu_filter"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="top|end"
              android:layout_marginTop="32dp"
              android:layout_marginEnd="32dp"
              android:backgroundTint="@color/image_btn_background"
              android:minHeight="48dp"
              android:onClick="@{()->viewModel.onFilterPopupMenu()}"
              android:src="@drawable/ic_filter" />

          <com.google.android.material.floatingactionbutton.FloatingActionButton
              android:id="@+id/create_photoTicket"
              android:onClick="@{()->viewModel.navigateToCreate()}"
              android:src="@drawable/ic_photo_create"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom|end"
              android:layout_margin="16dp"/>


          <com.google.android.material.floatingactionbutton.FloatingActionButton
              android:onClick="@{()->viewModel.navigateToAdd()}"
              android:src="@drawable/ic_baseline_add_24"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom|end"
              android:layout_marginBottom="16dp"
              android:layout_marginEnd="90dp"/>


      </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>