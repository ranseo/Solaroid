<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="photoTicket"
            type="com.example.solaroid.database.PhotoTicket" />

        <variable
            name="clickListener"
            type="com.example.solaroid.adapter.OnClickListener" />

    </data>

<!--    android:layout_width="130dp"-->
<!--    android:layout_height="180dp"-->
<!--    width를 match로 해놔야 이게 딲딱맞네 포스팅해두자-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/photo_ticket_border_line"
        android:onClick="@{()->clickListener.onClick(photoTicket)}">

        <ImageView
            android:id="@+id/solaroid_photo"
            android:src="@drawable/tmp_photo_image"
            android:layout_width="97.5dp"
            android:layout_height="135dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@tools:sample/avatars"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"

            />

        <TextView
            android:id="@+id/solaroid_text_date"
            android:text="@{photoTicket.date}"
            android:layout_width="97.5dp"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            app:layout_constraintTop_toBottomOf="@+id/solaroid_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center"
            android:gravity="center"
            tools:text="2022.01.18"
            android:textSize="12sp"
            android:textStyle="italic"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>