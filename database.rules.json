{
  "rules": {
    "profile" : {
      "$uid" : {
        ".read" : "auth != null && auth.uid == $uid",
        ".write" : "auth != null && auth.uid == $uid"
      }
    },


    "currentUsersNum" : {
      ".read" : "auth != null",
      ".write" : "auth != null"
    },


    "allUsers" : {
      ".read" : "auth != null && root.child('profile').child(auth.uid).exists()",
      ".write" : "auth != null && root.child('profile').child(auth.uid).exists()"
    },




    "myFriendList" : {
      "$uid" : {
        "list" : {
          ".read" : "auth !=null && auth.uid == $uid",
          ".write" : "auth != null && auth.uid == $uid"
        }
      }
    },

    "friendReception" : {
      "$friendCode" : {
        "list" : {
          ".read" : "auth !=null",
          ".write" : "auth != null"
        }
      }
    },

    "friendDispatch" : {
      "$uid" : {
        "list" : {
          ".read" : "auth != null && auth.uid == $uid",
          ".write": "auth != null && auth.uid == $uid"
        }
      }
    },



    "photoTicket" : {
      "$uid" : {
        ".read" : "auth != null && auth.uid == $uid",
        ".write" : "auth != null && auth.uid == $uid"
      }
    }
  }
}