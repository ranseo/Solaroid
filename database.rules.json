{
  "rules": {
    "profile" : {
      "$uid" : {
        ".read" : "auth != null && auth.uid == $uid",
        ".write" : "auth != null && auth.uid == $uid"
      }
    },


    "currentUsersNum" : {
      ".read" : "auth != null",
      ".write" : "auth != null"
    },


    "allUsers" : {
      ".read" : "auth != null && root.child('profile').child(auth.uid).exists()",
      ".write" : "auth != null && root.child('profile').child(auth.uid).exists()"
    },




    "myFriendList" : {
      "$uid" : {
        "list" : {
          ".read" : "auth !=null && auth.uid == $uid",
          ".write" : "auth != null && auth.uid == $uid"
        }
      }
    },


    "tmpFriendList" : {
      "$friendCode" : {
        "list" : {
          ".read" : "auth !=null",
          ".write" : "auth != null"
        }
      }
    },


    "friendReception" : {
      "$friendCode" : {
        "list" : {
          ".read" : "auth !=null",
          ".write" : "auth != null"
        }
      }
    },

    "friendDispatch" : {
      "$friendCode" : {
        "list" : {
          ".read" : "auth != null",
          ".write": "auth != null"
        }
      }
    },

    "withAlbum" : {
      "$albumId" : {
        "$uid" : {
          ".read" : "auth != null",
          ".write" : "auth != null && auth.uid == $uid"
        }
      }
    },


    "album" : {
      "$uid" : {
        "$albumId" : {
          ".read" : "auth != null && auth.uid == $uid",
          ".write" : "auth != null && auth.uid == $uid && root.child('withAlbum').child($albumId).child(auth.uid).exists()"
        }
      }
    },


    "albumRequest" : {
      "$friendCode" : {
        ".read" : "auth != null",
        ".write" : "auth != null"
      }
    },


    "photoTicket" : {
      "$albumId" : {
        ".read" : "auth != null && root.child('withAlbum').child($albumId).child(auth.uid).exists()",
        ".write" : "auth != null && root.child('withAlbum').child($albumId).child(auth.uid).exists()"
      }
    }
  }
}